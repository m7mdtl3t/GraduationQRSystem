@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card su-card">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">Login</h3>
                
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                
                <form method="post">
                    <div class="form-floating mb-3">
                        <input name="username" type="text" class="form-control login-input" placeholder="Username" required />
                        <label>Username</label>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input name="password" type="password" class="form-control login-input" placeholder="Password" required />
                        <label>Password</label>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn login-btn">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
