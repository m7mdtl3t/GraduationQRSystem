@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-white mb-3">Welcome to StageUP</h1>
    <p class="lead text-white-50">Graduation QR Management System</p>
</div>

<div class="row g-4 mb-5">
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card su-card text-center h-100">
            <div class="card-body d-flex flex-column justify-content-center">
                <div class="mb-3">
                    <i class="fas fa-user-graduate fa-2x text-primary"></i>
                </div>
                <h2 class="text-primary fw-bold">@ViewBag.TotalSeniors</h2>
                <p class="mb-0 text-white-50">Total Seniors</p>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card su-card text-center h-100">
            <div class="card-body d-flex flex-column justify-content-center">
                <div class="mb-3">
                    <i class="fas fa-users fa-2x text-info"></i>
                </div>
                <h2 class="text-info fw-bold">@ViewBag.TotalGuests</h2>
                <p class="mb-0 text-white-50">Total Guests</p>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card su-card text-center h-100">
            <div class="card-body d-flex flex-column justify-content-center">
                <div class="mb-3">
                    <i class="fas fa-check-circle fa-2x text-success"></i>
                </div>
                <h2 class="text-success fw-bold">@ViewBag.AttendedGuests</h2>
                <p class="mb-0 text-white-50">Attended</p>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card su-card text-center h-100">
            <div class="card-body d-flex flex-column justify-content-center">
                <div class="mb-3">
                    <i class="fas fa-chart-line fa-2x text-warning"></i>
                </div>
                <h2 class="text-warning fw-bold">@ViewBag.AttendanceRate%</h2>
                <p class="mb-0 text-white-50">Attendance Rate</p>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-12 col-lg-8">
        <div class="card su-card">
            <div class="card-body">
                <h5 class="card-title">Quick Actions</h5>
                <div class="d-grid gap-2 d-md-block">
                    <a class="btn btn-primary" href="@Url.Action("Create", "Seniors")">Add New Senior</a>
                    <a class="btn btn-outline-primary" href="@Url.Action("Index", "Seniors")">View All Seniors</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-4">
        <div class="card su-card">
            <div class="card-body">
                <h5 class="card-title">System Info</h5>
                <p class="mb-1"><strong>Version:</strong> 1.0.0</p>
                <p class="mb-1"><strong>Database:</strong> SQLite</p>
                <p class="mb-0"><strong>Status:</strong> <span class="text-success">Online</span></p>
            </div>
        </div>
    </div>
</div>
