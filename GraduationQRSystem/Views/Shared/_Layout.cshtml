@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>StageUP | GraduationQR</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg su-navbar">
        <div class="container-fluid">
            @{
                var brandUsername = Context.Session.GetString("Username");
                var brandRole = Context.Session.GetString("Role");
                string brandUrl = "/Account/Login";
                
                if (!string.IsNullOrEmpty(brandUsername))
                {
                    brandUrl = brandRole == "Admin" ? "/Admin/Home" : "/User/Home";
                }
            }
            <a class="navbar-brand su-brand" href="@brandUrl">StageUP</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @{
                        var username = Context.Session.GetString("Username");
                        var role = Context.Session.GetString("Role");
                    }
                    @if (!string.IsNullOrEmpty(username))
                    {
                        <li class="nav-item">
                            @if (role == "Admin")
                            {
                                <a class="nav-link text-light" href="/Admin/Home">Home</a>
                            }
                            else
                            {
                                <a class="nav-link text-light" href="/User/Home">Home</a>
                            }
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Account/Login">Home</a>
                        </li>
                    }
                    @if (!string.IsNullOrEmpty(username))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Seniors">Seniors</a>
                        </li>
                        @if (role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/Seniors/Create">Add Senior</a>
                            </li>
                        }
                        <li class="nav-item">
                            <span class="nav-link text-light">Hello, @username!</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Account/Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Account/Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-xxl py-4">
        @RenderBody()
    </div>

    <footer class="py-4 text-center su-footer">Â© @DateTime.Now.Year StageUP</footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


